<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bank_card_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_bigger"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_bank_card_icon"
        android:layout_width="@dimen/icon_big"
        android:layout_height="@dimen/icon_big"
        android:layout_alignLeft="@id/iv_bank_card_bg"
        android:layout_alignTop="@id/iv_bank_card_bg"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_bigger" />

    <TextView
        android:id="@+id/tv_bank_card_title"
        style="@style/text_size_bigger"
        android:layout_toRightOf="@id/iv_bank_card_icon"
        android:layout_alignTop="@id/iv_bank_card_bg"
        android:layout_marginTop="@dimen/margin_big"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_bank_card_type"
        style="@style/text_size_middle"
        android:layout_toRightOf="@id/iv_bank_card_icon"
        android:layout_below="@id/tv_bank_card_title"
        android:text="@string/cash_card"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_bank_card_num"
        style="@style/wrap_height_width"
        android:textSize="20dp"
        android:layout_alignRight="@id/iv_bank_card_bg"
        android:layout_marginRight="26dp"
        android:layout_below="@id/tv_bank_card_type"
        android:layout_marginTop="@dimen/margin_middle"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_bank_change"
        style="@style/common_long_button_bottom"
        android:text="@string/change_bank_card" />

</RelativeLayout>