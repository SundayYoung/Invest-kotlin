<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap_height_match_width"
    android:background="@drawable/shape_round_rect_gray_e1_3dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_invest_record_amount"
        android:layout_width="@dimen/icon_big"
        android:layout_height="@dimen/icon_big"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"/>

    <LinearLayout
        style="@style/wrap_height_width"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_middle"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_home_safe_title"
            android:textColor="@color/black_3e"
            style="@style/text_size_default" />

        <TextView
            android:id="@+id/tv_item_home_safe_content"
            style="@style/text_size_small"
            android:textColor="@color/tran_gray_8a_80"/>
    </LinearLayout>
</LinearLayout>