<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_bank_select_title"
        style="@style/wrap_height_width"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/please_select_bank_account"
        android:textColor="@color/black_2d"
        android:textSize="@dimen/text_module_big"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_account_valida_bind_top_line"
        style="@style/line_parent"
        android:layout_marginTop="@dimen/margin_30" />

</LinearLayout>