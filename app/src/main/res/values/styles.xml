    <style name="invest_detail_top" parent="wrap_height_width">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="invest_detail_bottom" parent="wrap_height_width">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_content_3</item>
        <item name="android:alpha">0.85</item>
    </style>

    <style name="invest_detail_tvertical_line">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@color/white_a3</item>
    </style>

    <style name="invest_detail_arrow" parent="wrap_height_match_width">
        <item name="android:drawableRight">@drawable/common_icon_arrow</item>
        <item name="android:textColor">@color/black_3e</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:padding">@dimen/margin_big</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

    <!--公用小标题-->
    <style name="common_small_title" parent="text_size_middle_gray_8a">
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="android:layout_marginLeft">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_content_5</item>
    </style>

    <!--功能项的layout设置-->
    <style name="common_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_action_height</item>
        <item name="android:paddingLeft">@dimen/margin_big</item>
        <item name="android:paddingRight">@dimen/margin_big</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/common_select_white_fore_tran_black</item>
    </style>

    <!--页面介绍大标题-->
    <style name="common_page_big_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_big</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_2d</item>
        <item name="android:textSize">@dimen/text_module_big</item>
    </style>

    <!--页面介绍大标题Layout-->
    <style name="common_page_big_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_big</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--点击获取验证码按钮-->
    <style name="common_get_code">
        <item name="android:background">@drawable/mine_embody_select</item>
        <item name="android:textColor">@color/blue_00</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- webview loading -->
    <style name="progress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <!--点击获取验证码按钮-->
    <style name="common_get_code_gradient" parent="button_parent">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/common_long_button_text_color_code</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:background">@drawable/selector_round_rect_code_background</item>
        <item name="android:layout_width">@dimen/message_code_button_height</item>
        <item name="android:layout_height">@dimen/button_round_height</item>
    </style>

    <!--底部弹出dialog样式-->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--动画-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/translate_bottom_out</item>
    </style>

</resources>
