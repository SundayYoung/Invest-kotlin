<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_card_ticket_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_action_height"
        android:background="@drawable/shape_round_rect_gray_e1_3dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_22"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_big"
        android:paddingRight="@dimen/margin_big">

        <TextView
            style="@style/text_size_default"
            android:layout_weight="1"
            android:text="@string/do_not_use_ticket"
            android:textColor="@color/blue_00" />

        <RadioButton
            android:id="@+id/rb_card_ticket_footer"
            style="@style/wrap_height_width"
            android:enabled="false"
            android:button="@drawable/common_selector_radiobutton_select" />
    </LinearLayout>
</LinearLayout>
