<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:paddingBottom="@dimen/margin_middle"
    android:paddingLeft="@dimen/margin_big"
    android:paddingRight="@dimen/margin_big"
    android:paddingTop="@dimen/margin_big">

    <TextView
        android:id="@+id/tv_module_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_2d"
        android:textSize="@dimen/text_module_big"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_module_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_module_title"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/home_icon_arrow_more"
        android:gravity="center_vertical"
        android:text="@string/invest_home_more"
        android:textColor="@color/blue_00"
        android:textSize="@dimen/text_middle" />

</RelativeLayout>