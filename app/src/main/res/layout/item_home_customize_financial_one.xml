<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_height_width"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/item_home_customize_financial_child"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginLeft="@dimen/margin_content_5"
        android:layout_marginRight="@dimen/margin_content_5"
        android:background="@drawable/home_dingzhi_card"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/text_size_small"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_big"
            android:text="@string/expected_annual_yield"
            android:textColor="@color/tran_gray_8a_60" />

        <LinearLayout
            style="@style/wrap_height_match_width"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_item_home_financila_yield"
                style="@style/text_size_biggest"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_big"
                android:layout_weight="1"
                android:textColor="@color/red_ff" />

            <Button
                android:id="@+id/bt_home_costom_invest"
                style="@style/button_parent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_biggest"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_big"
                android:background="@drawable/shape_round_rect_blue"
                android:text="@string/immediate_investment"
                android:textColor="@color/blue_00"
                android:textSize="@dimen/text_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_item_home_financila_date"
                style="@style/text_size_middle"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_big"
                android:textColor="@color/tran_gray_8a_60"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="@dimen/line_height"
                android:layout_height="@dimen/text_middle"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_content_5"
                android:layout_marginRight="@dimen/margin_content_5"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/tv_item_home_financila_money"
                style="@style/text_size_middle"
                android:layout_gravity="left"
                android:textColor="@color/tran_gray_8a_60" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>