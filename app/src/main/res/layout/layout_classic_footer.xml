<?xml version="1.0" encoding="utf-8"?>

<com.weiyankeji.zhongmei.ui.customview.ClassicLoadMoreFooterView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_action_height">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/tvLoadMore" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/tvLoadMore"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvLoadMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_default"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="@color/gray_c2" />
    </RelativeLayout>
</com.weiyankeji.zhongmei.ui.customview.ClassicLoadMoreFooterView>