<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_select_white_fore_tran_black"
    android:padding="@dimen/margin_big">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_invest_record_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_minimum"
            android:textColor="@color/black_3e"
            android:textSize="@dimen/text_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_invest_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_8a"
            android:textSize="@dimen/text_default" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_invest_record_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black_3e"
        android:textSize="@dimen/text_default"
        android:textStyle="bold" />

</RelativeLayout>