<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_select_tran_fore_black"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_big"
    android:paddingRight="@dimen/margin_big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_bank_card_icon"
            android:layout_width="@dimen/icon_big"
            android:layout_height="@dimen/icon_big"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle">

            <TextView
                android:id="@+id/tv_item_bank_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_minimum"
                android:textColor="@color/black_3e"
                android:textSize="@dimen/text_default"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_bank_list_hint"
                style="@style/text_size_middle"
                android:textColor="@color/gray_8a" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_item_bank_list_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:button="@drawable/selector_radio_status" />
    </LinearLayout>

    <ImageView style="@style/line_parent" />
</LinearLayout>