<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:id="@+id/title_back_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_big"
        android:paddingRight="@dimen/margin_big"
        android:visibility="gone">

        <ImageView
            android:id="@+id/title_back_image"
            style="@style/wrap_height_width"
            android:scaleType="fitCenter"
            android:src="@drawable/commom_icon_back_white_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="@dimen/title_height"
        android:paddingRight="@dimen/title_height"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"
        android:textStyle="bold" />
</RelativeLayout>