<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/item_background"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_module_content_bg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/home_module_content_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_home_module_content_title"
        style="@style/wrap_height_match_width"
        android:layout_below="@id/home_module_content_line"
        android:layout_marginBottom="@dimen/margin_content_6"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_big"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_title"
            style="@style/text_size_default"
            android:textColor="@color/black_36" />

        <LinearLayout
            android:id="@+id/ll_select_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_height_match_width"
        android:layout_below="@id/ll_home_module_content_title"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_select_yield"
                style="@style/wrap_height_width"
                android:textColor="@color/red_ff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                style="@style/text_size_middle"
                android:text="@string/expected_annual_yield"
                android:textColor="@color/gray_8a" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_height"
            android:layout_height="40dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_big">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_content_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_select_date_title"
                    style="@style/text_size_middle"
                    android:text="@string/invest_list_tab_limit"
                    android:textColor="@color/black_3e" />
                <TextView
                    android:id="@+id/tv_select_date"
                    style="@style/text_size_middle"
                    android:textColor="@color/black_3e" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_select_money_title"
                    style="@style/text_size_middle"
                    android:text="@string/remain"
                    android:textColor="@color/black_3e" />
                <TextView
                    android:id="@+id/tv_select_money"
                    style="@style/text_size_middle"
                    android:textColor="@color/black_3e" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>