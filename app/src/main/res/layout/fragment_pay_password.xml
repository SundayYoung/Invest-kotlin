<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_height_width"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_edit_password"
        style="@style/wrap_height_match_width"
        android:background="@color/white"
        android:drawableRight="@drawable/common_icon_arrow"
        android:padding="@dimen/margin_big"
        android:text="@string/change_pay_pw"
        android:textSize="@dimen/text_default"
        android:textColor="@color/black_3e"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_e1"
        android:layout_marginLeft="@dimen/margin_big"/>

    <TextView
        android:id="@+id/tv_forget_password"
        style="@style/wrap_height_match_width"
        android:background="@color/white"
        android:drawableRight="@drawable/common_icon_arrow"
        android:padding="@dimen/margin_big"
        android:text="@string/mine_password_forget"
        android:textSize="@dimen/text_default"
        android:textColor="@color/black_3e"/>


</LinearLayout>
